"use client";

import { useState } from "react";
import { Button } from "@/components/ui/button";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Sparkles, Leaf } from "lucide-react";

interface Plant {
  id: string;
  name: string;
  description: string;
  image: string;
}

interface Recommendation {
  name: string;
  description: string;
}

const PLANTS: Plant[] = [
  {
    id: "1",
    name: "Nane",
    description: "HÄ±zlÄ± bÃ¼yÃ¼r, nemli topraÄŸÄ± sever, kÃ¼Ã§Ã¼k alanlara uygun.",
    image: "/images/mint.jpg",
  },
  {
    id: "2",
    name: "FesleÄŸen",
    description: "GÃ¼neÅŸli yerlerde iyi geliÅŸir, aromatik bir bitki.",
    image: "/images/basil.jpg",
  },
  {
    id: "3",
    name: "Biberiye",
    description: "KuraklÄ±ÄŸa dayanÄ±klÄ±, hoÅŸ kokulu, odunsu saplÄ±.",
    image: "/images/rosemary.jpg",
  },
  {
    id: "4",
    name: "Limon Otu",
    description: "Ferah kokulu, sÄ±cak iklimlerde iyi yetiÅŸir.",
    image: "/images/lemongrass.jpg",
  },
  {
    id: "5",
    name: "Maydanoz",
    description: "Vitamin zengini, gÃ¶lgeli alanlara uyumlu.",
    image: "/images/parsley.jpg",
  },
];

const SEASONS = [
  { value: "spring", label: "Ä°lkbahar" },
  { value: "summer", label: "Yaz" },
  { value: "autumn", label: "Sonbahar" },
  { value: "winter", label: "KÄ±ÅŸ" },
];

export default function Home() {
  const [selectedPlants, setSelectedPlants] = useState<string[]>([]);
  const [selectedSeason, setSelectedSeason] = useState<string>("");
  const [recommendations, setRecommendations] = useState<Recommendation[]>([]);
  const [isLoading, setIsLoading] = useState(false);
  const [errorMessage, setErrorMessage] = useState<string | null>(null);
  const [retryCount, setRetryCount] = useState(0);
  const MAX_RETRIES = 3;

  const handleGetRecommendations = async () => {
    if (selectedPlants.length === 0 || !selectedSeason) {
      setErrorMessage("LÃ¼tfen en az bir bitki ve mevsim seÃ§in.");
      return;
    }
    setErrorMessage(null);
    setIsLoading(true);
    setRetryCount(0);
    await fetchRecommendations(0);
  };

  const fetchRecommendations = async (currentRetry: number) => {
    try {
      const response = await fetch("/api/recommendations", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          likedPlants: selectedPlants,
          season: selectedSeason,
        }),
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({
          error: "Bilinmeyen hata oluÅŸtu.",
        }));
        let message = errorData.error || "Ã–neri alÄ±namadÄ±.";

        if (response.status === 429) {
          message = `API kotasÄ±nÄ± aÅŸtÄ±n. ${currentRetry + 1}/${MAX_RETRIES} denemesi yapÄ±lÄ±yor...`;
          setErrorMessage(message);

          if (currentRetry < MAX_RETRIES) {
            const delay = 1000 * Math.pow(2, currentRetry); // exponential backoff
            setTimeout(() => fetchRecommendations(currentRetry + 1), delay);
            return;
          } else {
            message = `Birden fazla denemeden sonra yine kota aÅŸÄ±ldÄ±. Biraz bekleyip tekrar dene.`;
            setErrorMessage(message);
          }
        } else {
          setErrorMessage(message);
        }
        throw new Error(message);
      }

      const data = await response.json();
      setRecommendations(data.recommendations);
      setErrorMessage(null);
    } catch (error) {
      console.error("Recommendation error:", error);
      if (!errorMessage || !errorMessage.includes("denemesi")) {
        setErrorMessage("Beklenmeyen bir hata oluÅŸtu. Tekrar deneyin.");
      }
    } finally {
      if (currentRetry >= MAX_RETRIES || (errorMessage && !errorMessage.includes("denemesi"))) {
        setIsLoading(false);
      }
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-green-50 via-white to-yellow-50">
      {/* Header */}
      <header className="border-b bg-white/80 backdrop-blur-sm">
        <div className="container mx-auto px-4 py-4 flex items-center justify-between">
          <div className="flex items-center space-x-3">
            <div className="w-10 h-10 bg-gradient-to-br from-green-400 to-lime-500 rounded-full flex items-center justify-center">
              <Sparkles className="w-6 h-6 text-white" />
            </div>
            <h1 className="text-2xl font-bold bg-gradient-to-r from-green-700 to-lime-600 bg-clip-text text-transparent">
              UrbanGrow ðŸŒ±
            </h1>
          </div>
        </div>
      </header>

      {/* Main */}
      <main className="container mx-auto px-4 py-16">
        <div className="text-center mb-16">
          <h2 className="text-5xl md:text-6xl font-bold text-gray-900 mb-4">
            UrbanGrow: Åžehirde kendi bahÃ§eni bÃ¼yÃ¼t.
          </h2>
          <p className="text-xl text-gray-600 max-w-2xl mx-auto">
            Mevcut bitkilerine ve mevsime gÃ¶re uyarlanmÄ±ÅŸ yapay zekÃ¢ destekli Ã¶neriler al.
          </p>
        </div>

        {/* Selection */}
        <div className="max-w-4xl mx-auto">
          <Card className="shadow-lg">
            <CardHeader className="text-center">
              <CardTitle className="text-2xl text-gray-900">
                BahÃ§ene Uygun Bitkileri Bul
              </CardTitle>
              <CardDescription>
                Mevcut bitkilerini ve mevsimi seÃ§, sana uygun tamamlayÄ±cÄ± Ã¶neriler al.
              </CardDescription>
            </CardHeader>
            <CardContent className="space-y-6">
              <div className="grid md:grid-cols-2 gap-6">
                {/* Bitki seÃ§imi */}
                <div className="space-y-2">
                  <label className="text-sm font-medium text-gray-700 flex items-center gap-1">
                    <Leaf className="w-4 h-4" />
                    SevdiÄŸin Bitkiler (Birden fazlasÄ±nÄ± seÃ§)
                  </label>
                  <div className="space-y-2">
                    <Select
                      value=""
                      onValueChange={(value) => {
                        if (value && !selectedPlants.includes(value)) {
                          setSelectedPlants([...selectedPlants, value]);
                        }
                      }}
                    >
                      <SelectTrigger className="w-full">
                        <SelectValue placeholder="Bitkini ekle" />
                      </SelectTrigger>
                      <SelectContent>
                        {PLANTS.filter(
                          (p) => !selectedPlants.includes(p.id)
                        ).map((plant) => (
                          <SelectItem key={plant.id} value={plant.id}>
                            <div className="flex items-center space-x-3">
                              <img
                                src={plant.image || "/placeholder.svg"}
                                alt={plant.name}
                                className="w-8 h-8 rounded object-cover"
                              />
                              <div>
                                <div className="font-medium">{plant.name}</div>
                                <div className="text-xs text-gray-500">
                                  {plant.description}
                                </div>
                              </div>
                            </div>
                          </SelectItem>
                        ))}
                      </SelectContent>
                    </Select>

                    {selectedPlants.length > 0 && (
                      <div className="flex flex-wrap gap-2 p-3 bg-green-50 rounded-lg border border-green-200">
                        {selectedPlants.map((plantId) => {
                          const plant = PLANTS.find((p) => p.id === plantId);
                          return plant ? (
                            <div
                              key={plantId}
                              className="flex items-center space-x-2 bg-white px-3 py-1 rounded-full border border-green-300 text-sm"
                            >
                              <img
                                src={plant.image || "/placeholder.svg"}
                                alt={plant.name}
                                className="w-5 h-5 rounded object-cover"
                              />
                              <span className="font-medium">{plant.name}</span>
                              <button
                                onClick={() =>
                                  setSelectedPlants(
                                    selectedPlants.filter((id) => id !== plantId)
                                  )
                                }
                                className="text-green-600 hover:text-green-800 ml-1"
                              >
                                Ã—
                              </button>
                            </div>
                          ) : null;
                        })}
                      </div>
                    )}
                  </div>
                </div>

                {/* Mevsim seÃ§imi */}
                <div className="space-y-2">
                  <label className="text-sm font-medium text-gray-700 flex items-center gap-1">
                    <Sparkles className="w-4 h-4" />
                    Mevsim
                  </label>
                  <Select
                    value={selectedSeason}
                    onValueChange={setSelectedSeason}
                  >
                    <SelectTrigger className="w-full">
                      <SelectValue placeholder="Mevsimi seÃ§" />
                    </SelectTrigger>
                    <SelectContent>
                      {SEASONS.map((season) => (
                        <SelectItem key={season.value} value={season.value}>
                          {season.label}
                        </SelectItem>
                      ))}
                    </SelectContent>
                  </Select>
                </div>
              </div>

              <div className="text-center pt-4">
                <Button
                  onClick={handleGetRecommendations}
                  disabled={
                    isLoading || selectedPlants.length === 0 || !selectedSeason
                  }
                  className="bg-gradient-to-r from-green-500 to-lime-500 hover:from-green-600 hover:to-lime-600 text-white px-8 py-3 text-lg font-semibold rounded-full shadow-lg transition-all duration-200"
                >
                  {isLoading ? "Ã–neriler hesaplanÄ±yor..." : "BahÃ§emi GeliÅŸtir"}
                </Button>
              </div>
            </CardContent>
          </Card>
        </div>

        {/* Hata */}
        {errorMessage && (
          <div className="max-w-4xl mx-auto mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md text-center">
            {errorMessage}
          </div>
        )}

        {/* Ã–neriler */}
        {recommendations.length > 0 && (
          <div className="max-w-4xl mx-auto mt-12">
            <h3 className="text-3xl font-bold text-center text-gray-900 mb-8">
              Sana Ã–zel Bitki Ã–nerileri
            </h3>
            <div className="grid md:grid-cols-2 gap-6">
              {recommendations.map((rec, idx) => (
                <Card
                  key={idx}
                  className="border-lime-200 hover:shadow-lg transition-shadow duration-200"
                >
                  <CardHeader>
                    <CardTitle className="text-xl text-gray-900">
                      {rec.name}
                    </CardTitle>
                  </CardHeader>
                  <CardContent>
                    <p className="text-gray-600 leading-relaxed">
                      {rec.description}
                    </p>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        )}

        {/* SeÃ§ili Bitkiler */}
        {selectedPlants.length > 0 && (
          <div className="max-w-2xl mx-auto mt-8">
            <Card className="border-green-200">
              <CardHeader>
                <CardTitle className="text-lg text-gray-900">
                  SeÃ§tiÄŸin Bitkiler ({selectedPlants.length})
                </CardTitle>
              </CardHeader>
              <CardContent>
                <div className="grid gap-4">
                  {selectedPlants.map((plantId) => {
                    const plant = PLANTS.find((p) => p.id === plantId);
                    return plant ? (
                      <div
                        key={plantId}
                        className="flex items-center space-x-4 p-3 bg-green-50 rounded-lg"
                      >
                        <img
                          src={plant.image || "/placeholder.svg"}
                          alt={plant.name}
                          className="w-12 h-12 rounded-lg object-cover"
                        />
                        <div className="flex-1">
                          <h4 className="font-semibold text-gray-900">
                            {plant.name}
                          </h4>
                          <p className="text-gray-600 text-sm">
                            {plant.description}
                          </p>
                        </div>
                      </div>
                    ) : null;
                  })}
                </div>
              </CardContent>
            </Card>
          </div>
        )}
      </main>
    </div>
  );
}
